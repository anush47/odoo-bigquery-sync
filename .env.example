# Odoo config
ODOO_URL=https://your-odoo-url
ODOO_DB=your-db
ODOO_USERNAME=admin@example.com
ODOO_PASSWORD=your-password
ODOO_MODEL=sale.order

# BigQuery config
BQ_TABLE_ID=your_project.your_dataset.sale_orders

# Sync settings
BATCH_LIMIT=1000
BUFFER_MINUTES=2
LOOKBACK_DAYS=-1  # -1 for all records, or number of days to look back
DELETE_SYNCED_RECORDS=false  # true to delete from Odoo after sync, false to keep

# Environment: local or cloud
ENVIRONMENT=local

# GCS bucket for checkpoint (only for cloud)
GCS_BUCKET=your-bucket-name
STATE_FILE=sync_state.json

# Google Application Credentials (only for local)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your-gcp-key.json
